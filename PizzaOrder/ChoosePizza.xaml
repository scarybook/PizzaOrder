<Page x:Class="PizzaOrder.ChoosePizza"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzaOrder"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Pizza Order - Choose Pizza"
      KeepAlive="True">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="pizza.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Label Name="ChoosePizzaLabel"  
               Content="WYBIERZ PIZZĘ"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="24" FontFamily="Trebuchet MS"
               Background="Black"
               Foreground="Orange"
               FontWeight="Bold"/>

        <Grid Grid.Row="1" Name="GridPizza" Margin="0,0,0,0">
          
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

        </Grid>

    </Grid>

</Page>
